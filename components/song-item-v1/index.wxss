/* components/song-item-v1/index.wxss */

.item{
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
}

.item .content{
  flex: 1;
}
.item .image{
  width: 70px;
  height: 70px;
  border-radius: 12%;
  margin-right: 40rpx;
}
.content .name{
  padding-bottom: 10rpx;
  font-size: 17px;
}

.content .source{
  font-size: 14px;
  color: #333;
}
.arrow .icon{
  width: 24px;
  height: 24px;
  right: 0;
}